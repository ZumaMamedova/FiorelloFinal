@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Table</h4>
                <a class="btn btn-success" asp-controller="product" asp-action="create">
                    Add Product
                </a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Count</th>
                                <th>CategoryName</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/@item.Images.FirstOrDefault(i=>i.isMain).ImageUrl"/>
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.StockCount</td>
                                    <td>
                                        <a class="btn btn-primary" asp-controller="product" asp-action="update" asp-route-id="@item.Id">
                                            <i class="mdi mdi-tooltip-edit"></i>
                                        </a>
                                        <a class="btn btn-danger" asp-controller="product" asp-action="delete" asp-route-id="@item.Id"
                                            onclick="return confirm('Are you sure you want to delete this?');"> <i class="mdi mdi-delete"></i>
                                        </a>
                                        <a class="btn btn-success" asp-controller="product" asp-action="detail" asp-route-id="@item.Id">
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
